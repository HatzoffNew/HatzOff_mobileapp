<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.LandingActivity">



    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">



        <LinearLayout
            android:id="@+id/home_tab_layout"
            android:layout_alignParentBottom="true"
            android:weightSum="5"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/tab_home"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:contentDescription="Home">

                <ImageView
                    android:id="@+id/home_btn_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/white"
                    android:src="@drawable/ic_baseline_home_24"/>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_discover"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/discover_btn_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_search_24"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="top|center"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_filter"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@color/black"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/earn_btn_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_photo_filter_24"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_profile"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_btn_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_person_24"/>

            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:layout_alignParentBottom="true"
            android:id="@+id/heart"
            android:layout_width="70dp"
            android:background="@drawable/black_bg"
            android:layout_height="70dp"
            android:padding="10dp"
            android:layout_marginBottom="25dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/roundwhiteheart"/>

    </RelativeLayout>


</RelativeLayout>